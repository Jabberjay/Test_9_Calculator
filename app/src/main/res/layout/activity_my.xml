<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/screen"
            android:layout_weight="1"
            android:editable="false"
            android:cursorVisible="false"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/rel2">


        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="7"
            android:id="@+id/button7"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="8"
            android:id="@+id/button8"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button7"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="9"
            android:id="@+id/button9"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/button8"
            android:onClick="onTapped"/>

        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="4"
            android:id="@+id/button4"
            android:layout_below="@+id/button7"
            android:layout_toLeftOf="@+id/button5"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="5"
            android:id="@+id/button5"
            android:layout_below="@+id/button8"
            android:layout_toLeftOf="@+id/button6"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="6"
            android:id="@+id/button6"
            android:layout_below="@+id/button8"
            android:layout_toRightOf="@+id/button8"
            android:onClick="onTapped"/>

        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="1"
            android:id="@+id/button1"
            android:layout_below="@+id/button4"
            android:layout_toLeftOf="@+id/button2"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="2"
            android:id="@+id/button2"
            android:layout_below="@+id/button4"
            android:layout_toRightOf="@+id/button4"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="3"
            android:id="@+id/button3"
            android:layout_below="@+id/button6"
            android:layout_toRightOf="@+id/button8"
            android:onClick="onTapped"/>

        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="0"
            android:id="@+id/button0"
            android:onClick="onTapped"
            android:layout_alignTop="@+id/buttonDivide"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="."
            android:id="@+id/buttonPoint"
            android:onClick="onTapped"
            android:layout_alignTop="@+id/button0"
            android:layout_toLeftOf="@+id/button3"/>

        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="*"
            android:id="@+id/buttonTimes"
            android:layout_toRightOf="@id/button9"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="-"
            android:id="@+id/buttonMinus"
            android:layout_toRightOf="@id/button6"
            android:layout_below="@id/buttonTimes"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="+"
            android:id="@+id/buttonPlus"
            android:layout_toRightOf="@id/button3"
            android:layout_below="@id/buttonMinus"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="/"
            android:id="@+id/buttonDivide"
            android:layout_toRightOf="@id/button3"
            android:layout_below="@id/buttonPlus"
            android:onClick="onTapped"/>
        <Button
            android:layout_width="@dimen/equals_button"
            android:layout_height="@dimen/regular_button"
            android:text="="
            android:id="@+id/buttonEquals"
            android:onClick="onTapped"
            android:layout_below="@+id/buttonDivide"/>
        <Button
            android:layout_width="@dimen/regular_button"
            android:layout_height="@dimen/regular_button"
            android:text="C"
            android:id="@+id/buttonCancel"
            android:onClick="onTapped"
            android:layout_above="@+id/buttonEquals"
            android:layout_toLeftOf="@+id/buttonDivide"/>

    </RelativeLayout>

</LinearLayout>
